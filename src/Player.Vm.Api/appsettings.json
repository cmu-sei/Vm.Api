{
  "PathBase": "",
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "ClientSettings": {
    "urls": {
      "playerApi": "http://localhost:4300/"
    }
  },
  "CorsPolicy": {
    "Origins": ["http://localhost:4303", "http://localhost:4305"],
    "Methods": [],
    "Headers": [],
